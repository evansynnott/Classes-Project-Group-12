class doctor:
  information = 'doctor information\n'
  def __init__(self, id, name, specialization, working_time, qualification, room_number) -> None:
    self.id = id
    self.name = name
    self.specialization = specialization
    self.working_time = working_time
    self.qualification = qualification
    self.room_number = room_number
  def description(self):
    return f'{self.name} with employee id{self.id} is a doctor.'

class facility:
  information = 'facility information'
  def __init__(facility_name) -> None:
    self.facility_name = facility_name
  def description(self):
    return f'{self.facility_name} is a facility location.'

class laboratory:
  information = 'laboratory information'
  def __init__(lab_name, cost) -> None:
    self.lab_name = lab_name
    self.cost = cost
  def description(self):
    return f'{self.lab_name} is a lab location.'

class patient:
  information = 'patient information'
  def __init__(pid, name, disease, gender, age) -> None:
    self.pid = pid
    self.name = name
    self.disease = disease
    self.gender = gender
    self.age = age
  def description(self):
    return f'{self.lab_name} is a lab location.'

